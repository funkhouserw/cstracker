<% search_text = 'Profile URL, Steam Name or ID' %>
<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %>CS:GO Tracker</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application" %>
  <%= favicon_link_tag(asset_path 'favicon.ico') %>
  <meta name="description" content="CS:GO Tracker is a tool that tracks the performance and statistics of Counter Strike: Global Offensive players over time." />

  <% if Rails.env.production? %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-51459519-1', 'csgo-tracker.com');
    ga('send', 'pageview');

  </script>
  <% end %>

</head>
<body>
  <div id="content_container">
    <div id="header_container">
      <%= link_to "/", class: "title" do %>
        <%= image_tag("csgo_tracker_logo.png", class: "logo") %>
      <% end %>
      <div class="login_container right">
        <div class="login_table">
          <div class="login_field">
            <%= form_tag(search_players_path, method: "post") do %>
              <%= text_field_tag(:profile_url, nil, placeholder: search_text) %>
              <%= submit_tag(" ") %>
            <% end %>
          </div>
          </div>
      </div>
    </div>
    <div id="main_content_container">
      <% if flash[:error] %>
      <!-- <%= flash[:error] %> -->
      <% end %>
      <%= yield %>
    </div>
    <div id="footer_container">
      <a href="http://steampowered.com">POWERED BY STEAM</a> | 
      <a href="mailto:contact@csgo-tracker.com?Subject=CSGO%20Tracker%20Contact" target="_top">CONTACT</a> | 
      <%= link_to "FAQ", faq_path %>
    </div>
  </div>
</body>
</html>
