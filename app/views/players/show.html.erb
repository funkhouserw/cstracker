<%= javascript_include_tag "application" %>
<script src="http://code.highcharts.com/highcharts.js"></script>

<% title "#{ @player.community_profile.nickname } | " %>
<%= content_tag "div", id: "weapons", class: "hidden", data: {weapons: @player.latest_stats.all_weapons, ids: Stats.weapons.keys } do; end %>
<%= content_tag "div", id: "maps", class: "hidden", data: {maps: @player.latest_stats.all_maps } do; end %>

<%= render partial: "player_info", locals: { player: @player } %>
<%= render partial: "basic_stats", locals: { player: @player } %>
<%= render partial: "performance_stats", locals: { player: @player } %>
<%= render partial: "weapon_stats", locals: { player: @player } %>
<%= render partial: "map_stats", locals: { player: @player } %>
<%= render partial: "operation_stats", locals: { player: @player } %>

<script type="text/javascript">
  $(document).ready(function () {
    chartController.initialize("<%= @player.id %>");
  });
</script>
