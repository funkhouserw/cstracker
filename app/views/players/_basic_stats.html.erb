<%= render layout: "stats_section", locals: { player: @player, title: "General Stats" } do  %>
  <div class="basic_stats">
    <div class="stats_table">
      <table>
        <tr>
          <td class="stat_header">K/D</td>
          <td class="stat_data"><%= '%.2f' % @player.latest_stats.kd %></td>
          <td class="stat_header">MVP</td>
          <td class="stat_data"><%= @player.latest_stats.total_mvps %></td>
          <td class="stat_header">DPS</td>
          <td class="stat_data"><%= '%.2f' % @player.latest_stats.damage_per_shot %></td>
        </tr>
        <tr>
          <td class="stat_header">Accuracy</td>
          <td class="stat_data"><%= '%.2f' % (@player.latest_stats.accuracy * 100) %>%</td>
          <td class="stat_header">Headshots</td>
          <td class="stat_data"><%= '%.2f' % (@player.latest_stats.headshot_percentage * 100) %>%</td>
          <td class="stat_header">Wins</td>
          <td class="stat_data"><%= '%.2f' % (@player.latest_stats.win_percentage * 100) %>%</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="last_match_stats">
    <div class="title">Last Match Stats</div> 
    <div class="title stat_accent"><%= match_result @player.latest_stats.latest_match_result %></div>
    <div>
      <div class="stat_title">Rounds Won</div>
      <div class="stat stat_accent"><%= @player.latest_stats.last_match_wins %> / <%= @player.latest_stats.last_match_rounds %></div>
    </div>
    <div>
      <div class="stat_title">K/D Ratio</div>
      <div class="stat stat_accent"><%= '%.2f' % (@player.latest_stats.latest_match_kd) %></div>
    </div>
    <div>
      <div class="stat_title">Kills</div>
      <div class="stat stat_accent"><%= @player.latest_stats.last_match_kills %></div>
    </div>
    <div>
      <div class="stat_title">Deaths</div>
      <div class="stat stat_accent"><%= @player.latest_stats.last_match_deaths %></div>
    </div>
    <div>
      <div class="stat_title">Contribution</div>
      <div class="stat stat_accent"><%= @player.latest_stats.last_match_contribution_score %></div>
    </div>
    <div>
      <div class="stat_title">MVPs</div>
      <div class="stat stat_accent"><%= @player.latest_stats.last_match_mvps %></div>
    </div>
    <div>
      <div class="stat_title">Damage Done</div>
      <div class="stat stat_accent"><%= @player.latest_stats.last_match_damage %></div>
    </div>
    <div>
      <div class="stat_title">Money Spent</div>
      <div class="stat stat_accent">$<%= number_with_delimiter(@player.latest_stats.last_match_money_spent, :delimiter => ',') %></div>
    </div>
  </div>
  <br class="clear" />
<% end %>