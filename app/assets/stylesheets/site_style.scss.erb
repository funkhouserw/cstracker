@import url(http://fonts.googleapis.com/css?family=Alef|Roboto:100|Open+Sans);
$background-color: #222222;
$content-padding-amount: 0px;

@mixin content-padding($padding-amount) {
  padding-left: $padding-amount;
  padding-right: $padding-amount;
}

html {
  height: 100%;
}

body {
  font-family: 'Open Sans', sans-serif;
/*  background-image:url('/assets/grey-wash.png');*/
  background-image: url( <%= asset_path 'concrete_compressed.jpg' %>);
  background-color: $background-color;
  color: white;
  margin: 0px;
  height: 100%;
}

div {
  margin: 0px;
}

.white {
  color: #FFFFFF;
}

.hidden {
  display: none;
}

.right {
  float: right;
}

.clickable {
  cursor: pointer;
}

.hidden {
  display: none;
}

.bold {
  font-weight: bold;
}

.centered {
  margin: auto;
}

.media-image {
  max-width: 1000px;
}

.chart_preview {
  padding: 1px;
  border: 1px solid #000000;
  background-color: #808080;
  margin: auto;
}

#content_container {
  background-color: #2E3640;
  opacity: .9;
  position: relative;
  width: 1000px;
  min-height: 100%;
  margin: 0px auto;
  box-shadow: 0px 0px 80px #000000;
}

#main_content_container {
  @include content-padding($content-padding-amount);
  background-color: $background-color;
  h1 { margin-top: 0; margin-bottom: 0 }
}

#header_container {
  @include content-padding($content-padding-amount);
  height: 60px;
  vertical-align: middle;
  //line-height: 60px;

  .title {
    float: left;
  }

  .logo {
    max-height: 50px;
    margin-top: 5px;
    margin-left: 5px;
  }

  padding: 0 10px;
}

.padded_content {
  padding: 10px;
}

.main_section_header {
  width: 100%;
  background-color: #444444;
  text-align: center;

  .header {
    font-size: 23px;
    font-family: 'Roboto', sans-serif;
    padding: 5px;
  }
}

.flash_background {
  height: 35px;
  background-color: #000000;
  opacity: 0.8;
  position: absolute;
  width: 1000px;
}

.flash_container {
  position: absolute;
  left: 50%;

  .title {
    position: relative;
    left: -50%;
    font-size: 23px;
    font-family: 'Roboto', sans-serif;
    line-height: 35px;
  }
}

#footer_container {
  padding: 5px;
  text-align: center;
  font-size: 12px;
  a { color: white }
}

.faq_title {
  font-size: 22px;
  font-family: 'Roboto', sans-serif;
  font-weight: bold;
}
