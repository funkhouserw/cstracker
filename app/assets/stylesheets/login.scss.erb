.login_container {
  display: table;
  height: 100%;
}

.login_table {
	display: table-cell;
	vertical-align: middle;
}

.login_field {
	background-color: #BFBDBD;
	border:solid 1px #BFBDBD;
	color: #171717;
	height: 25px;
	padding-left:10px;
	width: 240px;
	border-radius:3px;

	input[type=text] {
		width:210px;
	}

	input[type=submit] {
		cursor: pointer;
		width: 20px;
		height: 20px;
		background-image:url(<%= asset_path 'search-icon.png' %>);
		background-size: 20px 20px;
	}

	input {
		border: none;
		padding: 0;
		background: none;
		outline: none;
	}
}

.login_field_main {
	background-color: #BFBDBD;
	border:solid 1px #BFBDBD;
	color: #171717;
	height: 35px;
	padding-left:10px;
	width: 500px;
	border-radius:7px;
	position: absolute;
	top: 425px;
	left: 250px;
	opacity: 0.9;

	input[type=text] {
		width:450px;
		font-size:25px;
		font-family: 'Roboto', sans-serif;
	}

	input[type=submit] {
		cursor: pointer;
		width: 30px;
		height: 30px;
		background-image:url(<%= asset_path 'search-icon.png' %>);
		background-size: 30px 30px;
		top: -5px;
		position: relative;
		opacity: 0.4;
	}

	input {
		border: none;
		padding: 0;
		background: none;
		outline: none;
	}
}

::-webkit-input-placeholder { /* WebKit browsers */
    color:    #373737;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    #373737;
    opacity:  1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    #373737;
    opacity:  1;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:    #373737;
}